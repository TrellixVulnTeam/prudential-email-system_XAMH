        <table class="data-table rounded-top rounded-bottom" width="100%" border="0" cellspacing="0" cellpadding="0" style="min-width:100%;">
            <tr>
                <th class="bkg-blue" scope="col" align="center" style="padding: 6px; border: 1px white solid;">
                    <span class="disclosure" style="color: #ffffff;">Category 1</span>
                </th>
                <th class="bkg-blue" scope="col" align="center" style="padding: 6px; border: 1px white solid;">
                    <span class="disclosure" style="color: #ffffff;">Category 2</span>
                </th>
                <th class="bkg-blue" scope="col" align="center" style="padding: 6px; border: 1px white solid;">
                    <span class="disclosure" style="color: #ffffff;">Category 3</span>
                </th>
                <th class="bkg-blue" scope="col" align="center" style="padding: 6px; border: 1px white solid;">
                    <span class="disclosure" style="color: #ffffff;">Category 4</span>
                </th>
                <th class="bkg-blue" scope="col" align="center" style="padding: 6px; border: 1px white solid;">
                    <span class="disclosure" style="color: #ffffff;">Category 5</span>
                </th>
            </tr>
            <tr>
                <td data-label="Category 1" class="bkg-light-gray" align="center" style="padding: 6px; border: 1px #ffffff solid;">
                    <span class="disclosure">Item</span>
                </td>
                <td data-label="Category 2" class="bkg-light-gray" align="center" style="padding: 6px; border: 1px #ffffff solid;">
                    <span class="disclosure">Item</span>
